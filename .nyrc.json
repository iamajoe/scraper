{
  "nyc": {
    "all": true,
    "extension": ["ts"],
    "include": [
      "src/**/*.!(*spec.)ts",
      "src/**/**/*.!(*spec.)ts",
      "src/**/**/**/*.!(*spec.)ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/**/*.spec.ts",
      "**/**/**/*.spec.ts",
      "**/**/**/**/*.spec.ts"
    ],
    "excludeNodeModules": true
  }
}
